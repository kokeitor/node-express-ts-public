{
  "compilerOptions": { 
    "target": "ES2020", 
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": { 
      "@*": ["*"],
    },
    "typeRoots": ["@types","./node_modules/@types"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "src/tests"],
  "exclude": ["node_modules"],
  "ts-node": { 
    "require": ["tsconfig-paths/register"]
  }
}
